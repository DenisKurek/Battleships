<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.deniskurek.SecondaryController">
   <content>
      <VBox fx:id="box" alignment="TOP_CENTER" fillWidth="false" prefHeight="1000.0" prefWidth="1000.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="1000.0" spacing="50.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="400.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="30.0" prefWidth="407.0" text="Your Board" textAlignment="CENTER" textFill="#1dc626">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                        <Pane fx:id="playerPane" prefHeight="400.0" prefWidth="400.0" />
                     </children>
                  </VBox>
                  <VBox fx:id="remainingPlayerShips" alignment="TOP_CENTER" prefHeight="300.0" prefWidth="200.0" spacing="5.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="1000.0" spacing="50.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="400.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="30.0" prefWidth="402.0" text="Enemy Board" textFill="#dd1c1c">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                        <Pane fx:id="enemyPane" prefHeight="400.0" prefWidth="400.0" />
                     </children>
                  </VBox>
                  <VBox fx:id="remainingEnemyShips" alignment="TOP_CENTER" prefHeight="300.0" prefWidth="200.0" spacing="5.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
